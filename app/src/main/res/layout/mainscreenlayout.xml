<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/homecard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="10dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/teal_700"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imagelayout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="WTi Crude Oil Cl"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="#3E3A3A"
                android:textSize="@dimen/_15sdp"/>
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt1"
               android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/ic_promotion"/>
            <TextView
                android:id="@+id/money"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toBottomOf="@id/txt1"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="@+id/txt1"
                android:background="@drawable/upcoming"
                android:text="$ 59.02"
                android:layout_marginBottom="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/txt1"
                app:layout_constraintTop_toBottomOf="@id/money"
                android:text="Code: "
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
               android:textSize="@dimen/_15sdp"/>
            <TextView
                android:id="@+id/opentxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               app:layout_constraintStart_toEndOf="@id/open"
                app:layout_constraintTop_toBottomOf="@id/money"
                android:text="6.00"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/opentxt"
                app:layout_constraintTop_toBottomOf="@id/money"
                android:text="Currency: "
                android:layout_marginStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:id="@+id/closetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/close"
                app:layout_constraintTop_toBottomOf="@id/money"
                android:text="9.00"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/anothertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt1"
                app:layout_constraintTop_toBottomOf="@id/open"
                android:text="56.45 39.45"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:id="@+id/growthtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:text="1"/>
            <ImageView
                android:id="@+id/growth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_60sdp"
            app:layout_constraintTop_toTopOf="@id/growthtxt"

                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_baseline_trending_up_24"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>